{
  "nixpacks": {
    "python": {
      "version": "3.8"
    }
  },
  "phases": {
    "setup": {
      "nixPkgs": ["python38"]
    },
    "install": {
      "cmds": ["pip install -r requirements.txt"]
    },
    "build": {
      "cmds": ["python manage_local.py collectstatic --no-input"]
    }
  },
  "start": {
    "cmd": "gunicorn microfinance.wsgi:application --bind 0.0.0.0:$PORT"
  }
}
